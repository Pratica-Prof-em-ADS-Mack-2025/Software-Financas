<div id="vue-chat-app" class="row py-3 h-100">    
    <div class="container-fluid py-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column gap-1 justify-content-between mb-3">
                    <div class="d-flex justify-content-between gap-1">
                        <h4 class="card-title">Fontes de Renda:</h4>
                        <button class="btn btn-primary" @@click="buscarConversas"><i class="fas fa-search"></i> Buscar</button>
                    </div>

                    <div class="row">
                        <div class="col-md-2">
                            <label>Data Inicial:</label><br />
                            <input v-model="dataInicial" class="form-control mb-2" type="date" />
                        </div>
                        <div class="col-md-2">
                            <label>Data Final:</label><br />
                            <input v-model="dataFinal" class="form-control mb-2" type="date" />
                        </div>     
                    </div>
                </div>

                <div class="table-responsive rounded border">
                    <table class="table-striped mb-0 table">
                        <thead>
                            <tr>
                                <th>Renda</th>
                                <th>Valor Gasto</th>
                                <th>Valor Recebido</th>
                                <th>% Gasto</th>
                                <th>Valor Restante</th>
                                <th>Valor Excedente</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Salário</td>
                                <td>R$7.000</td>
                                <td>R$10.000</td>
                                <td>70%</td>
                                <td>R$3.000</td>
                                <td>R$0.00</td>                               
                            </tr>
                            <tr>
                                <td>Dividendos</td>
                                <td>R$700</td>
                                <td>R$1.000</td>
                                <td>70%</td>
                                <td>R$300</td>
                                <td>R$0.00</td>
                            </tr>
                            <tr>
                                <td>Hora Extra</td>
                                <td>R$800</td>
                                <td>R$1.000</td>
                                <td>80%</td>
                                <td>R$200</td>
                                <td>R$0.00</td>
                            </tr>
                        </tbody>
                    </table>
                </div> 

                <div id="pieChart"></div>
                <script>
                    const options = {
                      chart: {
                        type: 'pie',
                        height: 350
                      },
                      labels: ['Salário', 'Dividendos', 'Hora Extra'],
                      series: [7000, 700, 800],
                      colors: ['#28a745', '#ffc107', '#17a2b8'],
                      legend: {
                        position: 'bottom',
                        fontSize: '14px'
                      },
                      dataLabels: {
                        formatter: function (val, opts) {
                          const total = opts.w.globals.seriesTotals.reduce((a, b) => a + b, 0);
                          const value = opts.w.globals.series[opts.seriesIndex];
                          const percent = ((value / total) * 100).toFixed(1);
                          return `R$ ${value.toLocaleString('pt-BR')} (${percent}%)`;
                        },
                        style: {
                          fontSize: '14px'
                        }
                      },
                      tooltip: {
                        y: {
                          formatter: (val) => 'R$ ' + val.toLocaleString('pt-BR')
                        }
                      }
                    };

                    const chart = new ApexCharts(document.querySelector("#pieChart"), options);
                    chart.render();
                </script>
            </div>
        </div>
    </div>  
   
</div>

